<application>
<name>IMCLEVER vision module</name>
<dependencies>
   <port>/icub/cam/right</port> 
   <port>/icub/cam/left</port>
   <port>/icub/head/state:o</port>
   <port>/icub/torso/state:o</port>
   <port>/icubSim/world</port>
</dependencies>

<module>
	<name>./idsiaTest</name>
	<parameters></parameters>
	<node>iCubIDSIA</node>
	<stdio>IDSIAOutput</stdio>	
	<tag>icubimclever</tag>
	<workdir>/home/migliore/Dropbox/Projects/IDSIAObjectLocalization/bin/</workdir>
</module>

<module>
      <name>yarpview</name>
      <parameters>--name /viewoutputleft --x 0 --y 20 --synch</parameters>
      <node>IDSIAOutput</node>
	<tag>viewoutputleft</tag>
</module>
<module>
      <name>yarpview</name>
      <parameters>--name /viewoutputright --x 40 --y 20 --synch</parameters>
      <node>IDSIAOutput</node>
	<tag>viewoutputright</tag>
</module>


<connection>
  <from>/icub/cam/right</from>
  <to>/viewright</to>
  <protocol>tcp</protocol>
</connection>
<connection>
  <from>/icub/cam/left</from>
  <to>/viewleft</to>
  <protocol>tcp</protocol>
</connection>

<connection>
  <from>/IMCLEVERVision/right/image:o</from>
  <to>/viewoutputright</to>
  <protocol>tcp</protocol>
</connection>
<connection>
  <from>/IMCLEVERVision/left/image:o</from>
  <to>/viewoutputleft</to>
  <protocol>tcp</protocol>
</connection>


<connection>
  <from>/icub/cam/right</from>
  <to>/IMCLEVERVision/right/image:i</to>
  <protocol>tcp</protocol>
</connection>

<connection>
  <from>/icub/cam/left</from>
  <to>/IMCLEVERVision/left/image:i</to>
  <protocol>tcp</protocol>
</connection>

<connection>
  <from>/icub/head/state:o</from>
  <to>/IMCLEVERVision/head:i</to>
    <protocol>tcp</protocol>
</connection>

<connection>
  <from>/icub/torso/state:o</from>
  <to>/IMCLEVERVision/torso:i</to>
   <protocol>tcp</protocol>
</connection>

<connection>
  <from>/IMCLEVERVision/left/image:o</from>
  <to>/viewleftoutput</to>
   <protocol>tcp</protocol>
</connection>

<connection>
  <from>/IMCLEVERVision/output:o</from>
  <to>/icubSim/world</to>
  <protocol>tcp</protocol>
</connection>

</application>
