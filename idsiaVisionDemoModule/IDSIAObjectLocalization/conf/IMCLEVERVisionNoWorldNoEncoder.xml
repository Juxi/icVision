<application>
<name>IMCLEVER vision module</name>
<dependencies>
   <port>/icub/cam/right</port> 
   <port>/icub/cam/left</port>
</dependencies>

<module>
<name>./idsiaTest</name>
	<parameters></parameters>
	<node>iCubIDSIA</node>
	<stdio>IDSIAOutput</stdio>	
	<tag>icubimclever</tag>
	<workdir>/home/migliore/Dropbox/Projects/IDSIAObjectLocalization/release/</workdir>
</module>

<module>
      <name>yarpview</name>
      <parameters>--name /viewleft --x 0 --y 20 --synch</parameters>
      <node>IDSIAOutput</node>
	<tag>viewleft</tag>
</module>
<module>
      <name>yarpview</name>
      <parameters>--name /viewright --x 40 --y 20 --synch</parameters>
      <node>IDSIAOutput</node>
	<tag>viewright</tag>
</module>

<module>
      <name>yarpview</name>
      <parameters>--name /viewoutputleft --x 0 --y 20 --synch</parameters>
      <node>IDSIAOutput</node>
	<tag>viewoutputleft</tag>
</module>
<module>
      <name>yarpview</name>
      <parameters>--name /viewoutputright --x 40 --y 20 --synch</parameters>
      <node>IDSIAOutput</node>
	<tag>viewoutputright</tag>
</module>


<connection>
  <from>/icub/cam/right</from>
  <to>/viewright</to>
  <protocol>tcp</protocol>
</connection>
<connection>
  <from>/icub/cam/left</from>
  <to>/viewleft</to>
  <protocol>tcp</protocol>
</connection>

<connection>
  <from>/IMCLEVERVision/right/image:o</from>
  <to>/viewoutputright</to>
  <protocol>tcp</protocol>
</connection>
<connection>
  <from>/IMCLEVERVision/left/image:o</from>
  <to>/viewoutputleft</to>
  <protocol>tcp</protocol>
</connection>


<connection>
  <output>/icub/cam/right</output>
  <input>/IMCLEVERVision/right/image:i</input>
  <protocol>tcp</protocol>
</connection>

<connection>
  <output>/icub/cam/left</output>
  <input>/IMCLEVERVision/left/image:i</input>
  <protocol>tcp</protocol>
</connection>

<connection>
  <output>/icub/head/state:o</output>
  <input>/IMCLEVERVision/head:i</input>
    <protocol>tcp</protocol>
</connection>

<connection>
  <output>/icub/torso/state:o</output>
  <input>/IMCLEVERVision/torso:i</input>
   <protocol>tcp</protocol>
</connection>

<connection>
  <output>/IMCLEVERVision/left/image:o</output>
  <input>/viewleftoutput</input>
   <protocol>tcp</protocol>
</connection>

</application>
